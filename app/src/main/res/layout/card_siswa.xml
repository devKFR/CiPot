<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardSiswa"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:clickable="true"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    >

    <RelativeLayout
        android:id="@+id/card_siswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tombol_tengah">

        <TextView
            android:id="@+id/tv_namaSiswaUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_fotoSiswa"
            android:text="Nama Siswa"
            android:textColor="#90ae15"
            android:textSize="18sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_fotoSiswa"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="18dp"
            android:src="@mipmap/logotrans" />

    </RelativeLayout>

</android.support.v7.widget.CardView>