<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_indikator_kemampuan_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ddpl.cipot.IndikatorKemampuanDetailActivity">

    <TextView
        android:id="@+id/tv_kemampuanJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5a61f"
        android:gravity="center"
        android:padding="16dp"
        android:text="Judul Kemampuan"
        android:textSize="22sp" />

    <SearchView
        android:id="@+id/search_indikator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_kemampuanJudul" />

    <ExpandableListView
        android:id="@+id/el_kemampuan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_indikator"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

    </ExpandableListView>

    <Button
        android:id="@+id/btn_kembaliIndikatorDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/tombol_kembali"
        android:text="Kembali"
        android:textColor="#ffbd4a"
        android:textSize="18sp" />

</RelativeLayout>
