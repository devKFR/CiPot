            <padding android:bottom="18dp" android:left="18dp" android:right="18dp" android:top="18dp"></padding>

            <solid android:color="#a81d14"></solid>

            <corners android:radius="18dp"></corners>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">

            <padding android:bottom="18dp" android:left="18dp" android:right="18dp" android:top="18dp"></padding>

            <solid android:color="#b82d24"></solid>

            <corners android:radius="18dp"></corners>
        </shape>
    </item>
